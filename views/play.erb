<html>
  <head>
    <meta charset="UTF-8">
    <title>Rock Paper Scissors</title>
    <link rel="stylesheet" type="text/css" href="/style.css"
  </head>
  <body>

<%= @player_1.name %>, select your move!

<form action="/play" method="post">
 
  <div id="rockpaperscissors">
    <div class="icon-container">
      <input type="submit" name="move" value="rock" id="rock">

    </div>
    <div class="icon-container">
      <input type="submit" name="move" value="scissors" id="scissors">

    </div>
    <div class="icon-container">
      <input type="submit" name="move" value="paper" id="paper">

    </div>
  </div>
</form>

<div class="names-container">
  <h2><%= @player_1.name %></h2><p>
  <h2><%= @player_1.score %></h2>

  <h2>Computer</h2>
  <h2><%= @player_2.score %></h2>
</div>

